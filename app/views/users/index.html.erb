<h2>Users</h2>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |u| %>
    <tr>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.phone %></td>
      <td><%= u.role %></td>
      <td>
        <%= link_to "Edit", edit_user_path(u) %> |
        <%= button_to "Delete", user_path(u), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Add New User", new_user_path %>
