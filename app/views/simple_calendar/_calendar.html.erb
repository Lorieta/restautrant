<div class="simple-calendar">
  <div class="calendar-heading d-flex align-items-center justify-content-center">
    <%= link_to calendar.url_for_previous_view, class: 'btn btn-outline-secondary btn-sm me-2', title: t('simple_calendar.previous', default: 'Previous') do %>
      <span aria-hidden="true">&laquo;</span>
      <span class="ms-1"><%= t('simple_calendar.previous', default: 'Previous') %></span>
    <% end %>

    <span class="calendar-title mx-3"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>

    <%= link_to calendar.url_for_next_view, class: 'btn btn-outline-secondary btn-sm ms-2', title: t('simple_calendar.next', default: 'Next') do %>
      <span class="ms-1"><%= t('simple_calendar.next', default: 'Next') %></span>
      <span aria-hidden="true">&raquo;</span>
    <% end %>
  </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <%= content_tag :tr, class: calendar.tr_classes_for(week) do %>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
