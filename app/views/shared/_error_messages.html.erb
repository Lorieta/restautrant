<% model = local_assigns[:object] || local_assigns[:resource] || local_assigns[:model] %>

<% if model && model.respond_to?(:errors) && model.errors.any? %>
	<div id="error_explanation" class="alert alert-danger" role="alert" aria-live="polite">
		<h4 class="alert-heading">
			<%= pluralize(model.errors.count, 'error') %> prohibited this
			<%= model.model_name.human.downcase %> from being saved:
		</h4>

		<ul class="mb-0">
			<% model.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>


